{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/order.json",

  "type": "object",
  "properties": {
    "seq": {
      "type": "integer",
      "minimum": 1
    },
    "command": {
      "enum": ["add", "delete"]
    },
    "type": {
      "enum": ["buy", "sell"]
    },
    "price": {
      "type": "string",
      "pattern": "^[0-9]+.?[0-9]{0,9}$"
    },
    "amount": {
      "type": "string",
      "pattern": "^[0-9]+.?[0-9]{0,9}$"
    },
    "contract": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9._-]{1,64}$"
    }
  },
  "additionalProperties": false,
  "required": [
    "seq",
    "command",
    "type",
    "contract",
    "amount",
    "price"
  ]
}