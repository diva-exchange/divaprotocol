{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/transaction/addOrder.json",

  "type": "object",
  "properties": {
    "seq": {
      "type": "integer",
      "minimum": 1
    },
    "channel": {
      "type": "string",
      "pattern": "^nostro$"
    },
    "command": {
      "enum": ["add", "delete"]
    },
    "type": {
      "enum": ["buy", "sell"]
    },
    "price": {
      "type": "string"
    },
    "amount": {
      "type": "string"
    },
    "contract": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9._-]{1,64}$"
    }
  },
  "additionalProperties": false,
  "required": [
    "seq",
    "channel",
    "command",
    "type",
    "contract",
    "amount",
    "price"
  ]
}