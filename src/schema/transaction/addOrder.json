{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/block/transaction/addOrder.json",

  "type": "object",
  "properties": {
    "seq": {
      "type": "integer",
      "minimum": 1
    },
    "command": {
      "type": "string",
      "pattern": "^addOrder$"
    },
    "publicKey": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{43}$"
    },
    "identAssetPair": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9._-]{1,64}$"
    },
    "orderType": {
      "enum": ["BUY", "SELL"]
    },
    "amount": {
      "type": "string",
      "pattern": "^[0-9]+.?[0-9]{0,9}$"
    },
    "price": {
      "type": "string",
      "pattern": "^[0-9]+.?[0-9]{0,9}$"
    }
  },
  "additionalProperties": false,
  "required": [
    "seq",
    "command",
    "publicKey",
    "identAssetPair",
    "orderType",
    "amount",
    "price"
  ]
}