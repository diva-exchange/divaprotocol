{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/book.json",

  "type": "object",
  "properties": {
    "contract": {
      "type": "string",
      "pattern": "^[A-Z0-9]{2,6}_[A-Z0-9]{2,6}$"
    },
    "buy": {
      "type": "array",
      "items": {
        "$ref": "record-buy-sell.json"
      },
      "uniqueItems": true
    },
    "sell": {
      "type": "array",
      "items": {
        "$ref": "record-buy-sell.json"
      },
      "uniqueItems": true
    }
  },
  "additionalProperties": true,
  "required": [
    "contract",
    "buy",
    "sell"
  ]
}
