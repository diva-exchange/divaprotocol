{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/recordBuySell.json",

  "type": "array",
  "items":
  {
    "type": "object",
    "properties": {
      "id": {
        "type": "number",
        "minimum": 1
      },
      "price": {
        "type": "string",
        "pattern": "^[0-9]+.[0-9]+$"
      },
      "amount": {
        "type": "string",
        "pattern": "^[0-9]+.[0-9]+$"
      }
    },
    "additionalProperties": false,
    "required": [
      "price",
      "amount"
    ]
  },
  "uniqueItems": true
}
