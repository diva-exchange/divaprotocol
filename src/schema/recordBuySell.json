{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/recordBuySell.json",

  "type": "array",
  "items":
  {
    "type": "object",
    "properties": {
      "price": {
        "type": "string",
        "pattern": "^[0-9]+.[0-9]+$"
      },
      "amount": {
        "type": "string",
        "pattern": "^[0-9]+.[0-9]+$"
      },
      "status": {
        "type": "number",
        "pattern": "^0|1$"
      }
    },
    "additionalProperties": false,
    "required": [
      "price",
      "amount",
      "status"
    ]
  },
  "uniqueItems": true
}
