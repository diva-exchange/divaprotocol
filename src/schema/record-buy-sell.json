{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schema/record-buy-sell.json",

  "type": "object",
  "properties": {
    "id": {
      "type": "number",
      "minimum": 1
    },
    "p": {
      "type": "string",
      "pattern": "^[0-9]+.[0-9]+$"
    },
    "a": {
      "type": "string",
      "pattern": "^[0-9]+.[0-9]+$"
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "p",
    "a"
  ]
}
